{
  "name": "扇贝助手",
  "version": "1.0",
  "manifest_version": 2,
  "description": "免费听力提示",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.shanbay.com/listen/**"],
      "css": ["css/style.css"],
      "js": [
        "js/jquery-3.2.0.min.js",
        "js/listen.js"
      ]
    }
  ],
  "permissions": [
    "cookies",
    "contextMenus",
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "*://*/*",
    "\u003Call_urls\u003E"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self'"
}

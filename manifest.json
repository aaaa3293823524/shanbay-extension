{
  "name": "扇贝助手",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "免费听力提示，任意网站添加扇贝生词",
  "background": {
    "scripts": ["lib/jquery.min.js", "lib/config.js", "lib/shanbay_oauth2.js", "js/background.js"]
  },
  "browser_action": {
    "default_icon": "img/icon_16.png",
    "default_title": "defualt title",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "options_page": "html/options.html",
  "content_scripts": [{
      "matches": ["*://*.shanbay.com/listen/sentence/**", "*://*.shanbay.com/listen/review/**"],
      "css": ["css/style.css"],
      "js": ["lib/jquery.min.js", "lib/jquery.tmpl.min.js", "js/listen.js"]
    },
    {
      "matches": ["*://*/**", "file://*/**"],
      "css": ["css/style.css"],
      "js": ["lib/jquery.min.js", "lib/jquery.tmpl.min.js", "js/words.js"]
    }
  ],
  "permissions": ["cookies", "activeTab",  "storage", "*://*/*"],
  "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self'"
}
